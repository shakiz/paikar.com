<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@drawable/sub_category_shape"
    android:gravity="center"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ImageResId"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/ic_icon_flour"
        android:tag="Drawable" />

    <TextView
        android:id="@+id/CategoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ImageResId"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/rice_pulses_flour"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/md_grey_800"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/ForwardIcon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_forward_right"
        android:tag="Drawable" />

</RelativeLayout>

